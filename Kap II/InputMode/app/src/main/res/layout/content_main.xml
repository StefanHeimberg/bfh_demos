<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="ch.approppo.inputmode.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="visible"
        android:text="aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj aoijaoije lakjs fopij askdfj aopije flakjs fj "/>

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:hint="Name"/>

    <EditText
    android:id="@+id/et2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/et3"
    android:layout_below="@+id/et1"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:hint="Description"
    android:lines="20"/>

    <EditText
    android:id="@+id/et3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bt"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:hint="Text3"/>

    <Button
    android:id="@+id/bt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="10dp"
    android:text="Send"/>

</RelativeLayout>
